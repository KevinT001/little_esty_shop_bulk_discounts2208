<h1>Add Discount</h1>
<br>
<h2>Fill out discount information</h2>
<br>
<br>
<%= form_with url: merchant_bulk_discounts_path(@merchant.id), method: :post, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.text_field :percentage %>

  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold %>

  <%= f.submit "Submit" %>
<% end %>